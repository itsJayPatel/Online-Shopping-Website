<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
   <script src="../../js/validateUserSignup.js" type="text/javascript"></script>

    <main>
        <% if(errorMessage) { %>
            <div class='flash-error'><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/signup" method="POST" onsubmit="return validate();">
            <div class="form-item">
                <label for="mobile">Mobile No</label>
                <input type="text" name="mobile" id="mobile" value="+" required>
                <div class="input-error" id="mobile-error"></div>
            </div>
            <div class="form-item">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" required>
                <div class="input-error" id="password-error"></div>
            </div>
            <div class="form-item">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" required>
                <div class="input-error" id="confirm-error"></div>
            </div>
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>