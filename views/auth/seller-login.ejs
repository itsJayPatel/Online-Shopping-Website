<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
   <script src="../../js/validateSellerLogin.js" type="text/javascript"></script>

    <main>
        <% if(errorMessage) { %>
            <div class='flash-error'><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/seller-login" method="POST" onsubmit="return validate();">
            <div class="form-item">
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email" required>
                <div class="input-error" id="email-error"></div>
            </div>
            <div class="form-item">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" required>
                <div class="input-error" id="password-error"></div>
            </div>
            <button class="btn" type="submit">Login</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %></form>