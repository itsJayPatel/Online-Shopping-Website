        <%- include('../includes/navigation.ejs') %>
        <main class="centered product-detail-container">
            <h1><%= product.title %></h1>
            <hr>
            <div class="image">
                <img src="../../Images/<%=product.imageUrl%>" alt="<%= product.title %>">
            </div>
